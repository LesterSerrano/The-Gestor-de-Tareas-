@{
    ViewData["Title"] = "Dashboard de Administración";
}

<div class="container mx-auto px-4 py-8">

    <!-- Título -->
    <h1 class="text-4xl font-bold text-gray-800 mb-8 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mr-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
        </svg>
        Dashboard
    </h1>

    <!-- Estadísticas generales -->
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-6 mb-12">
        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-600 transition-all hover:shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-semibold text-gray-700">Total Usuarios</h3>
                <i class="fas fa-users fa-2x text-blue-600"></i>
            </div>
            <p class="text-3xl font-bold text-blue-600">@ViewBag.TotalUsuarios</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-600 transition-all hover:shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-semibold text-gray-700">Total Proyectos</h3>
                <i class="fas fa-folder-open fa-2x text-green-600"></i>
            </div>
            <p class="text-3xl font-bold text-green-600">@ViewBag.TotalProyectos</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-purple-600 transition-all hover:shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-semibold text-gray-700">Total Tareas</h3>
                <i class="fas fa-tasks fa-2x text-purple-600"></i>
            </div>
            <p class="text-3xl font-bold text-purple-600">@ViewBag.TotalTareas</p>
        </div>
    </div>

    <!-- Progreso por proyecto -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        @foreach (var proyecto in ViewBag.TareasPorProyecto)
        {
            <div class="bg-white rounded-lg shadow-md p-6 transition-all hover:shadow-lg">
                <h4 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-folder-open mr-2 text-indigo-600"></i>
                    @proyecto.Key
                </h4>
                <div class="space-y-3 mb-4">
                    <p class="flex justify-between items-center">
                        <span class="text-gray-600">Usuarios Unidos:</span>
                        <span class="font-semibold text-indigo-600">@ViewBag.UsuariosPorProyecto[proyecto.Key]</span>
                    </p>
                    <p class="flex justify-between items-center">
                        <span class="text-gray-600">Tareas Pendientes:</span>
                        <span class="font-semibold text-yellow-600">@proyecto.Value.Pendientes</span>
                    </p>
                    <p class="flex justify-between items-center">
                        <span class="text-gray-600">Tareas En Proceso:</span>
                        <span class="font-semibold text-blue-600">@proyecto.Value.EnProceso</span>
                    </p>
                    <p class="flex justify-between items-center">
                        <span class="text-gray-600">Tareas Finalizadas:</span>
                        <span class="font-semibold text-green-600">@proyecto.Value.Finalizadas</span>
                    </p>
                </div>

                <div class="relative pt-1 mb-4">
                    <div class="flex mb-2 items-center justify-between">
                        <div>
                            <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-green-600 bg-green-200">
                                Progreso
                            </span>
                        </div>
                        <div class="text-right">
                            <span class="text-xs font-semibold inline-block text-gray-600">
                                @ViewBag.ProgresoPorProyecto[proyecto.Key]%
                            </span>
                        </div>
                    </div>
                    <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-gray-200">
                        <div style="width: @ViewBag.ProgresoPorProyecto[proyecto.Key]%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-green-500 transition-all duration-500 ease-in-out"></div>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Administrador"))
    { 
    <!-- Módulos de administración -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-lg shadow-md p-6 text-center transition-all hover:shadow-lg hover:scale-105">
            <i class="fas fa-tags fa-3x mb-3 text-purple-600"></i>
            <h5 class="text-lg font-semibold mb-2">Categorías</h5>
            <p class="text-gray-600 mb-4">Gestiona las categorías de tareas.</p>
                <a href="@Url.Action("Index", "Categoria")"
                   class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded transition duration-200 w-full">
                    Ir a Categorías
                </a>
            </div>
        <div class="bg-white rounded-lg shadow-md p-6 text-center transition-all hover:shadow-lg hover:scale-105">
            <i class="fas fa-user-tag fa-3x mb-3 text-blue-600"></i>
            <h5 class="text-lg font-semibold mb-2">Cargos</h5>
            <p class="text-gray-600 mb-4">Gestiona los cargos de usuarios.</p>
                <a href="@Url.Action("Index", "Cargo")"
                   class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded transition duration-200 w-full">
                    Ir a Cargos
                </a>
            </div>
        <div class="bg-white rounded-lg shadow-md p-6 text-center transition-all hover:shadow-lg hover:scale-105">
            <i class="fas fa-exclamation-circle fa-3x mb-3 text-red-600"></i>
            <h5 class="text-lg font-semibold mb-2">Prioridades</h5>
            <p class="text-gray-600 mb-4">Gestiona los niveles de prioridad de tareas.</p>
                <a href="@Url.Action("Index", "Prioridad")"
                   class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded transition duration-200 w-full">
                    Ir a Prioridad
                </a>
            </div>
        <div class="bg-white rounded-lg shadow-md p-6 text-center transition-all hover:shadow-lg hover:scale-105">
            <i class="fas fa-tasks fa-3x mb-3 text-green-600"></i>
            <h5 class="text-lg font-semibold mb-2">Estado de Tareas</h5>
            <p class="text-gray-600 mb-4">Gestiona los estados de las tareas.</p>
                <a href="@Url.Action("Index", "EstadoTarea")"
                   class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded transition duration-200 w-full">
                    Ir a Estados
                </a>
            </div>
    </div>
    }
</div>
